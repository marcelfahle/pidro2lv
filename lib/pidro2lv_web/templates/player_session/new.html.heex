<h1>Log in</h1>

<.form let={f} for={@conn} action={Routes.player_session_path(@conn, :create)} as={:player}>
  <%= if @error_message do %>
    <div class="alert alert-danger">
      <p><%= @error_message %></p>
    </div>
  <% end %>

  <%= label f, :username%>
  <%= text_input f, :username, required: true %>

  <%= label f, :password %>
  <%= password_input f, :password, required: true %>

  <%= label f, :remember_me, "Keep me logged in for 60 days" %>
  <%= checkbox f, :remember_me %>

  <div>
    <%= submit "Log in" %>
  </div>
</.form>

<p>
  <%= link "Register", to: Routes.player_registration_path(@conn, :new) %> |
  <%= link "Forgot your password?", to: Routes.player_reset_password_path(@conn, :new) %>
</p>
